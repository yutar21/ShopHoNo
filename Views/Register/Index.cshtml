@model ShopHoNo.Models.User
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="container" style="display: flex; justify-content: center; height: 100vh;">
    <div class="col-md-5" style="margin-right: 20px; margin-top: 90px;">
        @using (Html.BeginForm("LoginCustomer", "Login", FormMethod.Post))
        {
            <!-- Email input -->
            <div data-mdb-input-init class="form-outline mb-4">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", @placeholder = " ", @id = "Email" })
                <label class="form-label" for="Email">Email address</label>
                <span id="emailValidationMessage" class="text-danger"></span> <!-- Hiển thị lỗi cho Email -->
            </div>

            <!-- Password input -->
            <div data-mdb-input-init class="form-outline mb-4">
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control form-control-lg", @placeholder = " ", @id = "Password" })
                <label class="form-label" for="Password">Password</label>
                <span id="passwordValidationMessage" class="text-danger"></span> <!-- Hiển thị lỗi cho Password -->
            </div>

            <div class="d-flex justify-content-around align-items-center mb-4">
                <!-- Checkbox -->
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="form1Example3" />
                    <label class="form-check-label" for="form1Example3"> Remember me </label>
                </div>
                <a href="#!">Forgot password?</a>
            </div>

            <!-- Submit button -->
            <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block">Sign in</button>
        }
    </div>

    <div class="col-md-5" style="margin-left: 20px; margin-top: 49px;">
        @using (Html.BeginForm("RegisterCustomer", "Register", FormMethod.Post))
        {
            <!-- Dòng trống để căn chỉnh -->
            <div style="height: 40px;"></div> <!-- Thay đổi chiều cao nếu cần -->
            <!-- Full Name input -->
            <div data-mdb-input-init class="form-outline mb-4">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-lg", @placeholder = " ", @id = "FullName" })
                <label class="form-label" for="Username">Username</label>
                <span id="fullNameValidationMessage" class="text-danger"></span> <!-- Hiển thị lỗi cho Full Name -->
            </div>

            <!-- Email input -->
            <div data-mdb-input-init class="form-outline mb-4">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", @placeholder = " ", @id = "Email2" })
                <label class="form-label" for="Email2">Email address</label>
                <span id="emailValidationMessage2" class="text-danger"></span> <!-- Hiển thị lỗi cho Email -->
            </div>

            <!-- Password input -->
            <div data-mdb-input-init class="form-outline mb-4">
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control form-control-lg", @placeholder = " ", @id = "Password2" })
                <label class="form-label" for="Password2">Password</label>
                <span id="passwordValidationMessage2" class="text-danger"></span> <!-- Hiển thị lỗi cho Password -->
            </div>

            <div class="d-flex justify-content-around align-items-center mb-4">
                <!-- Checkbox -->
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="form1Example4" />
                    <label class="form-check-label" for="form1Example4"> Remember me </label>
                </div>
                <a href="#!">Forgot password?</a>
            </div>

            <!-- Submit button -->
            <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block">Register</button>
        }
    </div>
</div>