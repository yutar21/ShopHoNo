@model ShopHoNo.Models.ViewModels.CreateUserViewModel
@{
    ViewData["Title"] = "Init User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Init User</h1>

<form asp-action="CreateUser" method="post">
    <div>
        <label asp-for="Username"></label>
        <input asp-for="Username" required />
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" required />
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" required />
    </div>
    <div>
        <label for="SelectedRole">Role</label>
        <select asp-for="SelectedRole" asp-items="@(new SelectList(Model.AvailableRoles))" required>
            <option value="">Select a role</option>
        </select>
    </div>

    <button type="submit">Tạo người dùng</button>

    <!-- Display validation summary -->
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
