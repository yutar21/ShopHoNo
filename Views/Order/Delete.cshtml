@model ShopHoNo.Models.Order

@{
    ViewData["Title"] = "Delete Order";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete Order</h1>

<p>Are you sure you want to delete this order?</p>
<p><strong>Full Name:</strong> @Model.FullName</p>
<p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
<p><strong>Address:</strong> @Model.Address</p>
<p><strong>Notes:</strong> @Model.Notes</p>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button asp-action="DeleteConfirmed" asp-controller="order" type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>