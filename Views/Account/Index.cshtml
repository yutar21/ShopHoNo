@model ShopHoNo.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="container" style="display: flex; justify-content: center; height: 100vh;">
    <div class="col-md-5" style="margin-right: 20px; margin-top: 90px;">
        <form asp-action="Login" asp-controller="Account" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div data-mdb-input-init class="form-outline mb-4">
                <input asp-for="Username" type="text" class="form-control form-control-lg" id="Username" placeholder=" " />
                <label class="form-label" for="Username">Username</label>
                <span asp-validation-for="Username"></span>
            </div>

            <div data-mdb-input-init class="form-outline mb-4">
                <input asp-for="Password" type="password" class="form-control form-control-lg" id="Password" placeholder=" " />
                <label class="form-label" for="Password">Password</label>
                <span asp-validation-for="Password"></span>
            </div>

            <div class="d-flex justify-content-around align-items-center mb-4">
                <div class="form-check">
                    <a asp-action="Register" asp-controller="Account">Register?</a>
                </div>
                <a asp-action="ForgotPassword" asp-controller="Account">Forgot password?</a>
            </div>

            <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
        </form>

        <div class="d-flex justify-content-center mt-3">
            <!-- Update the action name to match the method in the controller -->
            <a asp-controller="Account" asp-action="LoginWithGoogle" class="btn btn-primary">Sign in with Google</a>
        </div>
         @* <div class="d-flex justify-content-center mt-3">
            <!-- Update the action name to match the method in the controller -->
            <a asp-controller="Account" asp-action="LoginWithFacebook" class="btn btn-primary">Sign in with Facebook</a>
        </div>*@
    </div>
</div>
