@model IEnumerable<ShopHoNo.Models.Product>

<div class="row isotope-grid">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item">
            <div class="block2">
                <div class="block2-pic hov-img0">
                    <img src="@item.Image" alt="IMG-PRODUCT" />
                    <a asp-action="ProductDetail" asp-controller="Products" asp-route-id="@item.Id" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                        Quick View
                    </a>
                </div>
                <div class="block2-txt flex-w flex-t p-t-14">
                    <div class="block2-txt-child1 flex-col-l ">
                        <a href="/Products/Detail/@item.Id" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6"> <!-- Link to product details -->
                            @item.Name
                        </a>
                        <span class="stext-105 cl3">@item.Price</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
